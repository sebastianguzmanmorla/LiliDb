{
    "name": "sebastianguzmanmorla/lili-db",
    "description": "Php ORM",
    "type": "library",
    "require": {
        "php": ">=8.4",
        "ext-pgsql": "*",
        "ext-mysqli": "*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.2",
        "phpunit/phpunit": "^12.1"
    },
    "homepage": "https://github.com/sebastianguzmanmorla/LiliDb",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "LiliDb\\": ["src/"],
            "LiliDb\\Tests\\": ["tests/"]
        }
    },
    "authors": [
        {
            "name": "Sebastián Enrique Guzmán Morla",
            "email": "sebastian.guzman@outlook.com"
        }
    ],
    "scripts": {
        "tests": [
            "phpunit --testdox tests"
        ],
        "fix": [
            "php-cs-fixer fix"
        ]
    }
}
